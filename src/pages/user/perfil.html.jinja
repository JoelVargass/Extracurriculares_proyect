{% extends "templates/guest.html.jinja" %}

{% block title %}Perfil{% endblock %}

{% block content %}

{% include 'components/navbar.html' %}

<div class="bg-white shadow-lg rounded-lg p-6 mx-4 sm:mx-6 lg:mx-8 mt-6">
    {% if user %}
        <h1 class="text-2xl font-bold text-[#4aa282] mb-6">Detalle de Usuario</h1>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">ID:</label>
            <span class="text-gray-900">{{ user.id }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Nombres:</label>
            <span class="text-gray-900">{{ user.firstname }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Apellidos:</label>
            <span class="text-gray-900">{{ user.lastname }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Matr√≠cula:</label>
            <span class="text-gray-900">{{ user.enrollment_number }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Correo:</label>
            <span class="text-gray-900">{{ user.email }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Contacto:</label>
            <span class="text-gray-900">{{ user.contact }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Rol:</label>
            <span class="text-gray-900">{{ user.role }}</span>
        </div>
    {% else %}
        <h1 class="text-2xl font-bold mb-4 text-red-500">Usuario No Encontrado</h1>
        <p class="text-gray-700">El usuario que buscas no existe.</p>
    {% endif %}
</div>

{% include 'components/footer.html' %}
{% endblock %}
