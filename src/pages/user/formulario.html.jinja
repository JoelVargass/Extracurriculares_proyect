<!-- src/pages/user/formulario.html.jinja -->

{% block content %}
<div class="container mx-auto mt-8">
    <h2 class="text-2xl font-bold mb-4">Formulario de Inscripción a Club</h2>
    <form action="/user/inscription" method="post" class="max-w-md">
        <div class="mb-4">
            <label for="user_id" class="block text-sm font-medium text-gray-700">ID de Usuario</label>
            <input type="text" id="user_id" name="user_id" placeholder="Ingrese el ID de usuario" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        </div>
        <div class="mb-4">
            <label for="club_id" class="block text-sm font-medium text-gray-700">ID de Club</label>
            <input type="text" id="club_id" name="club_id" placeholder="Ingrese el ID de club" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        </div>
        <div class="mb-4">
            <label for="nivel" class="block text-sm font-medium text-gray-700">Nivel</label>
            <input type="text" id="nivel" name="nivel" placeholder="Ingrese el nivel (TSU, Licenciatura/Ingeniería)" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        </div>
        <div class="mb-4">
            <label for="carrera" class="block text-sm font-medium text-gray-700">Carrera</label>
            <input type="text" id="carrera" name="carrera" placeholder="Ingrese la carrera" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        </div>
        <div class="mb-4">
            <label for="cuatrimestre" class="block text-sm font-medium text-gray-700">Cuatrimestre</label>
            <input type="text" id="cuatrimestre" name="cuatrimestre" placeholder="Ingrese el cuatrimestre" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        </div>
        <div class="mb-4">
            <label for="grupo" class="block text-sm font-medium text-gray-700">Grupo</label>
            <input type="text" id="grupo" name="grupo" placeholder="Ingrese el grupo" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        </div>
        <!-- Otros campos similares seguirían aquí -->

        <div class="mb-4">
            <button type="submit" class="bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600">Registrar Inscripción</button>
        </div>
    </form>
</div>
{% endblock %}
