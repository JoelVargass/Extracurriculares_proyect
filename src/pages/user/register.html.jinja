<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+DE+Grund:wght@100;400&display=swap" rel="stylesheet">
    <title>Registro</title>
    <link rel="icon" href="/img/ut-logo.png">
    <style>
        :root {
            --primary-color: #4aa282;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center p-7">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-4xl">
        <h1 class="text-3xl font-bold text-center mb-6 text-[var(--primary-color)]">Registro</h1>
        <form id="registrationForm" class="flex flex-wrap -mx-2">
            <!-- Nombre -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="firstname" class="block text-sm font-medium text-gray-700">Nombre</label>
                <input type="text" id="firstname" name="firstname" placeholder="Ingresa tu nombre" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-firstname"></span>
            </div>
            <!-- Apellidos -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="lastname" class="block text-sm font-medium text-gray-700">Apellidos</label>
                <input type="text" id="lastname" name="lastname" placeholder="Ingresa tus apellidos" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-lastname"></span>
            </div>
            <!-- Matrícula -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="enrollment_number" class="block text-sm font-medium text-gray-700">Matrícula</label>
                <input type="text" id="enrollment_number" name="enrollment_number" placeholder="Ingresa tu matrícula" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-enrollment_number"></span>
            </div>
            <!-- Correo -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="email" class="block text-sm font-medium text-gray-700">Correo</label>
                <input type="email" id="email" name="email" placeholder="Ingresa tu correo" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-email"></span>
            </div>
            <!-- Correo Institucional -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="institutional_email" class="block text-sm font-medium text-gray-700">Correo Institucional</label>
                <input type="email" id="institutional_email" name="institutional_email" placeholder="Ingresa tu correo institucional" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-institutional_email"></span>
            </div>
            <!-- CURP -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="curp" class="block text-sm font-medium text-gray-700">CURP</label>
                <input type="text" id="curp" name="curp" placeholder="Ingresa tu CURP" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-curp"></span>
            </div>
            <!-- Fecha de Nacimiento -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="date_of_birth" class="block text-sm font-medium text-gray-700">Fecha de Nacimiento</label>
                <input type="date" id="date_of_birth" name="date_of_birth" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-date_of_birth"></span>
            </div>
            <!-- Nacionalidad -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="nationality" class="block text-sm font-medium text-gray-700">Nacionalidad</label>
                <input type="text" id="nationality" name="nationality" placeholder="Ingresa tu nacionalidad" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-nationality"></span>
            </div>
            <!-- Contacto -->
            <div class="w-full md:w-1/2 px-2 mb-4">
                <label for="contact" class="block text-sm font-medium text-gray-700">Contacto</label>
                <input type="text" id="contact" name="contact" placeholder="Ingresa tu contacto" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-contact"></span>
            </div>
            <!-- Carrera -->
            <div class="w-full px-2 mb-4">
                <label for="degree_id" class="block text-sm font-medium text-gray-700">Carrera</label>
                <select id="degree_id" name="degree_id" class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                    {% for degree in degrees %}
                        <option value="{{ degree.id }}">{{ degree.title }}</option>
                    {% endfor %}
                </select>
                <span class="text-red-500 text-sm error-message" id="error-degree_id"></span>
            </div>
            <!-- Contraseña -->
            <div class="w-full px-2 mb-4">
                <label for="password" class="block text-sm font-medium text-gray-700">Contraseña</label>
                <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" required
                    class="mt-1 p-2 w-full border border-gray-300 rounded focus:outline-none focus:border-[var(--primary-color)] text-sm sm:text-base">
                <span class="text-red-500 text-sm error-message" id="error-password"></span>
            </div>
            <!-- Botón de Envío -->
            <div class="w-full px-2 mb-4 flex justify-center">
                <button type="submit" class="px-5 py-2 bg-[var(--primary-color)] text-white rounded hover:bg-opacity-90 transition duration-300 text-sm sm:text-base">Registrar</button>
            </div>
            <!-- Enlace de Inicio de Sesión -->
            <div class="w-full text-center">
                <span class="text-sm sm:text-base">¿Ya tienes una cuenta?</span>
                <a href="/user/login" class="text-[var(--primary-color)] hover:underline text-sm sm:text-base">Iniciar sesión</a>
            </div>
        </form>
    </div>
</body>
</html>
