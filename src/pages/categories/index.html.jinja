{% extends "templates/guest.html.jinja" %}

{% block title %}Categories{% endblock %}

{% block content %}
<div class="bg-white shadow-md rounded-lg p-6">
    <div class="flex gap-5 items-center mb-4">
        <h1 class="text-2xl font-bold">Categorías</h1>
        <a href="/categories/create" class="bg-blue-500 text-white py-1 px-4 rounded text-sm">Crear Categorías</a>
    </div>
    {% if categories %}
        {% if categories|length > 0 %}
            <table class="min-w-full bg-white overflow-x-scroll">
                <thead>
                    <tr>
                        <th class="py-2 px-4 text-left border-b-2 border-gray-300">ID</th>
                        <th class="py-2 px-4 text-left border-b-2 border-gray-300">Nombre</th>
                        <th class="py-2 px-4 text-left border-b-2 border-gray-300">Descripción</th>
                        <th class="py-2 px-4 text-left border-b-2 border-gray-300">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td class="py-2 px-4 border-b border-gray-300">{{ category.id }}</td>
                            <td class="py-2 px-4 border-b border-gray-300">{{ category.title }}</td>
                            <td class="py-2 px-4 border-b border-gray-300">{{ category.description }}</td>
                            <td class="py-2 px-4 border-b border-gray-300">
                                <a href="/categories/{{ category.id }}/edit" class="text-blue-700 p-1">Editar</a>  |
                                <form method="post" action="/categories/{{ category.id }}/delete" class="inline">
                                    <input type="hidden" name="method" value="delete">
                                    <button type="submit" class="text-red-600">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-gray-700">No se encontraron categorías.</p>
        {% endif %}
    {% else %}
        <p class="text-gray-700">No se encontraron categorías.</p>
    {% endif %}
</div>
{% endblock %}
