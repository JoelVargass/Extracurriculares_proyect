{% extends "templates/guest.html.jinja" %}

{% block title %}Category Details{% endblock %}

{% block content %}
<div class="bg-white shadow-md rounded-lg p-6">
    {% if category %}
        <h1 class="text-2xl font-bold mb-4">Category Details</h1>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">ID:</label>
            <span class="text-gray-900">{{ category.id }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Title:</label>
            <span class="text-gray-900">{{ category.title }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Description:</label>
            <span class="text-gray-900">{{ category.description }}</span>
        </div>
    {% else %}
        <h1 class="text-2xl font-bold mb-4 text-red-500">Category Not Found</h1>
        <p class="text-gray-700">The category you are looking for does not exist.</p>
    {% endif %}
</div>
{% endblock %}
