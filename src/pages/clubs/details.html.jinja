{% extends "templates/guest.html.jinja" %}

{% block title %}Club Details{% endblock %}

{% block content %}
<div class="bg-white shadow-md rounded-lg p-6">
    {% if club %}
        <h1 class="text-2xl font-bold mb-4">Club Details</h1>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">ID:</label>
            <span class="text-gray-900">{{ club.id }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Club Name:</label>
            <span class="text-gray-900">{{ club.club_name }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Description:</label>
            <span class="text-gray-900">{{ club.description }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Init Hour:</label>
            <span class="text-gray-900">{{ club.init_hour }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Finish Hour:</label>
            <span class="text-gray-900">{{ club.finish_hour }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Quota:</label>
            <span class="text-gray-900">{{ club.quota }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Teacher Name:</label>
            <span class="text-gray-900">{{ club.teacher_name }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Teacher Email:</label>
            <span class="text-gray-900">{{ club.teacher_email }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Category:</label>
            <span class="text-gray-900">{{ club.category.title }}</span>
        </div>
    {% else %}
        <h1 class="text-2xl font-bold mb-4 text-red-500">Club Not Found</h1>
        <p class="text-gray-700">The club you are looking for does not exist.</p>
    {% endif %}
</div>
{% endblock %}
