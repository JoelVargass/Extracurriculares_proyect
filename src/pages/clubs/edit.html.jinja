{% extends "templates/guest.html.jinja" %}

{% block title %}Edit Club{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-6">Editar Club</h1>
    {% if errors %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Error:</strong>
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <form method="post" action="/clubs/{{ club.id }}/edit" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <input type="hidden" name="_method" value="put">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="club_name"><Nombre del club></label>
            <input name="club_name" id="club_name" value="{{ club.club_name }}" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" placeholder="Nombre del club">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="description">Descripción</label>
            <textarea name="description" id="description" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Descripción">{{ club.description }}</textarea>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="init_hour">Hora de Inicio</label>
            <input name="init_hour" id="init_hour" value="{{ club.init_hour }}" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="time">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="finish_hour">Hora de Finalización</label>
            <input name="finish_hour" id="finish_hour" value="{{ club.finish_hour }}" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="time">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="quota">Cupos</label>
            <input name="quota" id="quota" value="{{ club.quota }}" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="number" placeholder="Cupos">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="teacher_name">Nombre del profesor</label>
            <input name="teacher_name" id="teacher_name" value="{{ club.teacher_name }}" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" placeholder="Nombre del profesor">
        </div>
       <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="teacher_email">Correo del profesor</label>
        <input name="teacher_email" id="teacher_email" value="{{ club.teacher_email }}"class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="email" placeholder="Correo del profesor" required>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="category_id">Categoría</label>
            <select name="category_id" id="category_id" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                {% for category in categories %}
                    <option value="{{ category.id }}" {% if club.category_id == category.id %} selected {% endif %}>{{ category.title }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Actualizar Club
            </button>
        </div>
    </form>
</div>
{% endblock %}
