{% extends "templates/guest.html.jinja" %}

{% block title %}User Details{% endblock %}

{% block content %}
<div class="bg-white shadow-md rounded-lg p-6">
    {% if user %}
        <h1 class="text-2xl font-bold mb-4">Detalle de usuarios</h1>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">ID:</label>
            <span class="text-gray-900">{{ user.id }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Nombres:</label>
            <span class="text-gray-900">{{ user.firstname }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Apellidos:</label>
            <span class="text-gray-900">{{ user.lastname }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Matricula:</label>
            <span class="text-gray-900">{{ user.enrollment_number }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Correo:</label>
            <span class="text-gray-900">{{ user.email }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Contacto:</label>
            <span class="text-gray-900">{{ user.contact }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Rol:</label>
            <span class="text-gray-900">{{ user.role }}</span>
        </div>
    {% else %}
        <h1 class="text-2xl font-bold mb-4 text-red-500">User Not Found</h1>
        <p class="text-gray-700">The user you are looking for does not exist.</p>
    {% endif %}

</div>
{% endblock %}
