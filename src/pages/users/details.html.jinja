{% extends "templates/guest.html.jinja" %}

{% block title %}User Details{% endblock %}

{% block content %}
<div class="bg-white shadow-md rounded-lg p-6">
    {% if user %}
        <h1 class="text-2xl font-bold mb-4">User Details</h1>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">ID:</label>
            <span class="text-gray-900">{{ user.id }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">First Name:</label>
            <span class="text-gray-900">{{ user.firstname }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Last Name:</label>
            <span class="text-gray-900">{{ user.lastname }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Enrollment Number:</label>
            <span class="text-gray-900">{{ user.enrollment_number }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Email:</label>
            <span class="text-gray-900">{{ user.email }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Contact:</label>
            <span class="text-gray-900">{{ user.contact }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Cuatri:</label>
            <span class="text-gray-900">{{ user.cuatri }}</span>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-bold">Role:</label>
            <span class="text-gray-900">{{ user.role }}</span>
        </div>
    {% else %}
        <h1 class="text-2xl font-bold mb-4 text-red-500">User Not Found</h1>
        <p class="text-gray-700">The user you are looking for does not exist.</p>
    {% endif %}
</div>
{% endblock %}
