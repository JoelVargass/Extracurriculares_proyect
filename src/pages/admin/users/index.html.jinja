{% extends "templates/guest.html.jinja" %}

{% block title %}Users List{% endblock %}

{% block content %}
<div class="bg-white shadow-md rounded-lg p-6 overflow-x-scroll">
    <div class="flex gap-5 items-center mb-4">
        <h1 class="text-2xl font-bold">Lista de usuarios</h1>
        <a href="/dashboard/users/create" class="bg-blue-500 text-white py-1 px-4 rounded text-sm">Nuevo</a>
    </div>
    {% if users and users|length > 0 %}
        <table class="min-w-full bg-white">
            <thead>
                <tr>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">ID</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Matricula</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Nombre</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Apellidos</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Correo</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Correo Institucional</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">CURP</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Fecha de Nacimiento</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Nacionalidad</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Contacto</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Rol</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Club</th>
                    <th class="py-2 px-4 text-left border-b-2 border-gray-300">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.id }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.enrollment_number }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 capitalize">{{ user.firstname }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 capitalize">{{ user.lastname }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.email }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.institutional_email }}</td>
                        <td class="py-2 px-4 border-b border-gray-300 uppercase">{{ user.curp }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.date_of_birth }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.nationality }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.contact }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">{{ user.role }}</td>
                        <td class="py-2 px-4 border-b border-gray-300">
                            {% if user.enrollments %}
                                {{ user.enrollments[0].club.name }}
                            {% else %}
                                No inscrito
                            {% endif %}
                        </td>
                        <td class="py-2 px-4 border-b border-gray-300 flex gap-2">
                            <a href="/dashboard/users/{{ user.id }}/edit" class="text-blue-500 hover:text-blue-700">Editar</a> |
                            <form action="/dashboard/users/{{ user.id }}/delete" method="post" class="inline" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este usuario?')">
                                <input type="hidden" name="method" value="delete">
                                <button type="submit" class="text-red-500 hover:text-red-700">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-gray-700">No se encontraron usuarios.</p>
    {% endif %}
</div>
{% endblock %}
